<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yeni Ödünç İşlemi</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Yeni Ödünç İşlemi</h1>
        <form action="/borrows/add" method="POST">
            <div class="mb-3">
                <label for="KullaniciID" class="form-label">Kullanıcı:</label>
                <select name="KullaniciID" id="KullaniciID" class="form-control" required>
                    <% users.forEach(user => { %>
                    <option value="<%= user.KullaniciID %>"><%= user.AdSoyad %></option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <label for="KitapID" class="form-label">Kitap:</label>
                <select name="KitapID" id="KitapID" class="form-control" required>
                    <% books.forEach(book => { %>
                    <option value="<%= book.KitapID %>"><%= book.KitapAdi %> (Stok: <%= book.StokDurumu %>)</option>
                    <% }) %>
                </select>
            </div>
            
            <button type="submit" class="btn btn-primary">Ekle</button>
            <a href="/borrows" class="btn btn-secondary">Geri Dön</a>
        </form>
    </div>
</body>
</html>
