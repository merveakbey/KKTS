<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Kitaplar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .back-button {
            position: fixed;
            bottom: 50px; /* Alt konum */
            right: 50px;  /* Sağ konum */
            z-index: 1000;
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 50px;
            text-align: center;
            font-size: 16px;
            cursor: pointer;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
            transition: background-color 0.3s ease-in-out, transform 0.2s ease-in-out;
        }
        .back-button:hover {
            background-color: #5a6268;
            transform: scale(1.1);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Kitap Yönetimi</h1>
        <div class="text-end mb-3">
            <a href="/books/add" class="btn btn-primary">Yeni Kitap Ekle</a>
        </div>
        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Adı</th>
                    <th>Yazar</th>
                    <th>Kategori ID</th>
                    <th>Yayın Tarihi</th>
                    <th>Stok</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <% books.forEach(book => { %>
                <tr>
                    <td><%= book.KitapID %></td>
                    <td><%= book.KitapAdi %></td>
                    <td><%= book.Yazar %></td>
                    <td><%= book.KategoriID %></td>
                    <td><%= book.YayinTarihi %></td>
                    <td><%= book.StokDurumu %></td>
                    <td>
                        <a href="/books/edit/<%= book.KitapID %>" class="btn btn-warning btn-sm">Düzenle</a>
                        <a href="/books/delete/<%= book.KitapID %>" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>
    <!-- Sağ Alt Geri Butonu -->
    <a href="/index" class="btn btn-secondary back-button">Geri</a>
</body>
</html>
