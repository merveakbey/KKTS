<!DOCTYPE html>
<html lang="en">
<head>
    <title>Kullanıcılar</title>
    <!-- Bootstrap ve DataTables -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap5.min.js"></script>
    <style>
        .back-button {
            position: fixed;
            bottom: 50px; /* Sağ alt köşeye biraz yukarı taşıyoruz */
            right: 50px;  /* Sağdan biraz boşluk bırakıyoruz */
            z-index: 1000;
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 50px;
            text-align: center;
            font-size: 16px;
            cursor: pointer;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.3);
            transition: background-color 0.3s ease-in-out, transform 0.2s ease-in-out;
        }
        .back-button:hover {
            background-color: #5a6268;
            transform: scale(1.1);
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Kullanıcılar</h1>
        <div class="text-end mb-3">
            <a href="/users/add" class="btn btn-primary">Yeni Kullanıcı Ekle</a>
        </div>
        <table id="usersTable" class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Ad Soyad</th>
                    <th>Telefon Numarası</th>
                    <th>Eposta</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                <% users.forEach(user => { %>
                <tr>
                    <td><%= user.KullaniciID %></td>
                    <td><%= user.AdSoyad %></td>
                    <td><%= user.TelefonNumarasi %></td>
                    <td><%= user.Eposta %></td>
                    <td>
                        <a href="/users/edit/<%= user.KullaniciID %>" class="btn btn-warning btn-sm">Düzenle</a>
                        <a href="/users/delete/<%= user.KullaniciID %>" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Sağ Alt Köşe Geri Butonu -->
    <a href="/index" class="btn btn-secondary back-button">Geri</a>

    <script>
        $(document).ready(function () {
            $('#usersTable').DataTable({
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.13.1/i18n/Turkish.json"
                }
            });
        });
    </script>
</body>
</html>
