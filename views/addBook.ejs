<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yeni Kitap Ekle</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h1 class="text-center">Yeni Kitap Ekle</h1>
        <form action="/books/add" method="POST">
            <div class="mb-3">
                <label for="KitapAdi" class="form-label">Kitap Adı:</label>
                <input type="text" class="form-control" name="KitapAdi" id="KitapAdi" required>
            </div>
            <div class="mb-3">
                <label for="Yazar" class="form-label">Yazar:</label>
                <input type="text" class="form-control" name="Yazar" id="Yazar" required>
            </div>
            <div class="mb-3">
                <label for="KategoriID" class="form-label">Kategori:</label>
                <select name="KategoriID" id="KategoriID" class="form-control" required>
                    <% categories.forEach(category => { %>
                    <option value="<%= category.KategoriID %>"><%= category.KategoriAdi %></option>
                    <% }) %>
                </select>
            </div>
            
            <div class="mb-3">
                <label for="YayinTarihi" class="form-label">Yayın Tarihi:</label>
                <input type="date" class="form-control" name="YayinTarihi" id="YayinTarihi">
            </div>
            <div class="mb-3">
                <label for="StokDurumu" class="form-label">Stok Durumu:</label>
                <input type="number" class="form-control" name="StokDurumu" id="StokDurumu" required>
            </div>
            <button type="submit" class="btn btn-primary">Ekle</button>
            <a href="/books" class="btn btn-secondary">Geri Dön</a>
        </form>
    </div>
</body>
</html>
